<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>StaffManagerWeb</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>404</error-code>
    <location>/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/500.jsp</location>
  </error-page>
  <servlet>
    <description>验证码</description>
    <servlet-name>CpachaServlet</servlet-name>
    <servlet-class>com.mjz.servlet.CpachaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CpachaServlet</servlet-name>
    <url-pattern>/CpachaServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>登录验证</description>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.mjz.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <filter>
    <description>登录状态过滤</description>
    <filter-name>LoginFilter</filter-name>
    <filter-class>com.mjz.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/SystemServlet</url-pattern>
    <url-pattern>/StaffServlet</url-pattern>
    <url-pattern>/Staff1Servlet</url-pattern>
    <url-pattern>/DepartmentServlet</url-pattern>
    <url-pattern>/DutyServlet</url-pattern>
    <url-pattern>/SelectedDutyServlet</url-pattern>
    <url-pattern>/AttendanceServlet</url-pattern>
    <url-pattern>/LeaveServlet</url-pattern>
  </filter-mapping>
  <servlet>
    <description>登录后的主界面</description>
    <servlet-name>SystemServlet</servlet-name>
    <servlet-class>com.mjz.servlet.SystemServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SystemServlet</servlet-name>
    <url-pattern>/SystemServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>学生信息管理</description>
    <servlet-name>StaffServlet</servlet-name>
    <servlet-class>com.mjz.servlet.StaffServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StaffServlet</servlet-name>
    <url-pattern>/StaffServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>班级信息管理</description>
    <servlet-name>DepartmentServlet</servlet-name>
    <servlet-class>com.mjz.servlet.DepartmentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DepartmentServlet</servlet-name>
    <url-pattern>/DepartmentServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>图片管理</description>
    <servlet-name>PhotoServlet</servlet-name>
    <servlet-class>com.mjz.servlet.PhotoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PhotoServlet</servlet-name>
    <url-pattern>/PhotoServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>教师信息管理</description>
    <servlet-name>Staff1Servlet</servlet-name>
    <servlet-class>com.mjz.servlet.Staff1Servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Staff1Servlet</servlet-name>
    <url-pattern>/Staff1Servlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>课程信息管理</description>
    <servlet-name>DutyServlet</servlet-name>
    <servlet-class>com.mjz.servlet.DutyServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DutyServlet</servlet-name>
    <url-pattern>/DutyServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>选课信息管理</description>
    <servlet-name>SelectedDutyServlet</servlet-name>
    <servlet-class>com.mjz.servlet.SelectedDutyServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SelectedDutyServlet</servlet-name>
    <url-pattern>/SelectedDutyServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>考勤信息管理</description>
    <servlet-name>AttendanceServlet</servlet-name>
    <servlet-class>com.mjz.servlet.AttendanceServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AttendanceServlet</servlet-name>
    <url-pattern>/AttendanceServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>请假信息管理</description>
    <servlet-name>LeaveServlet</servlet-name>
    <servlet-class>com.mjz.servlet.LeaveServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LeaveServlet</servlet-name>
    <url-pattern>/LeaveServlet</url-pattern>
  </servlet-mapping>
</web-app>